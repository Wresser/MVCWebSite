@model MVCWebSite.Models.ViewModels.ViewModelLogin

@{
    ViewBag.Title = "Home Page";
}

<h2>САЙТ З АВТОРИЗОВАНИМ ДОСТУПОМ</h2>

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label>Логін</label>
        @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @type = "text", @placeholder = "Введіть логін" })
    </div>

    <div class="form-group">
        <label>Пароль</label>
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type = "password", @placeholder = "Введіть пароль" })
    </div>

    <p class="login-error">@ViewBag.ErrorText</p>
    <input type="submit" class="btn btn-primary button-style add-margin" value="Вхід" />
}

<a class="btn btn-primary button-style add-margin" href="@Url.Action("Index", "Register")">Реєстрація</a>